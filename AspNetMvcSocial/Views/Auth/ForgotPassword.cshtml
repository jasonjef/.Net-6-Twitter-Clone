@model ForgotPasswordViewModel

@{
    Layout = null;
}

<html lang="en">
  <head>
  	<title>Twitter | Clone</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="~/css/authlogin.css" />

	</head>
	<body class="img js-fullheight" style="background-image: url(/css/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section"></h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">Forgot Password?</h3>
		      	<form class="signin-form" asp-controller="Auth" asp-action="ForgotPassword" method="POST" >
					  <h6 class="text-center">@ViewBag.fpmsg</h6>
		      		<div class="form-group">
		      			<input type="text" class="form-control" placeholder="Username or Email" asp-for="Email" required>
		      		</div>
	            <div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary submit px-3">Reset Password</button>
	            </div>
	            <div class="form-group d-md-flex">
	            </div>
	          </form>
	          <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
	          <div class="social d-flex text-center">
	          	<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
	          	<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Google</a>
	          </div>
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/js/jquery.min.js"></script>
  <script src="~/js/popper.js"></script>
  <script src="~/js/bootstrap.min.js"></script>
  <script src="~/js/main.js"></script>

	</body>
</html>